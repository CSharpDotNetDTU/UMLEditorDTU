<UserControl x:Class="Uml_Creator.View.UserControls.Status"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uml_Creator.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="StatusGrid">
        
        <TextBox x:Name="textBox" Background="Orange" Height="21" TextWrapping="Wrap" Text="{Binding Path=DataContext.StatusText, ElementName=StatusGrid}" VerticalAlignment="Top" Width="244" Margin="0,240.4,0,0"/>
    </Grid>
</UserControl>
