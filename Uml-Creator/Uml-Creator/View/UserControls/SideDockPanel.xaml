<UserControl x:Class="Uml_Creator.View.UserControls.SideDockPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Uml_Creator.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="24">
                <ComboBox x:Name="toolboxCombo" Width="120"
                         ItemsSource="{Binding Path = ToolboxSelections}"
                          SelectedItem="{Binding Path = SelectedList}"
                            Text="Select Figures"
                          />

            </Menu>
            <Canvas x:Name="ToolCanvas" Margin="0,0,0,-23" Height="275" VerticalAlignment="Top"></Canvas>
        </DockPanel>
    </Grid>
</UserControl>
