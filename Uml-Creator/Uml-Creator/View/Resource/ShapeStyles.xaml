<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Uml_Creator.View">
    <Style x:Key="SolidLine" TargetType="Line">
        <Setter Property="X1" Value="{Binding FromPoint.X}"/>
        <Setter Property="Y1" Value="{Binding FromPoint.Y}"/>
        <Setter Property="X2" Value="{Binding ToPoint.X}"/>
        <Setter Property="Y2" Value="{Binding ToPoint.Y}"/>
        <Setter Property="StrokeDashArray" Value="{Binding StrokeStyle}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Stroke" Value="Black"/>
    </Style>
    
</ResourceDictionary>